<body>
    <div class="container">
        <h1>Will You Be My Valentine, Kuchu Puchu? ‚ù§Ô∏è</h1>
        <div class="buttons">
            <button class="yes" onclick="handleResponse('yes')">Yes</button>
            <button class="maybe" onclick="handleResponse('maybe')">Maybe ü§î</button>
            <button class="no" id="noButton">No</button>
        </div>
        <div class="floating-hearts" id="hearts"></div>
        <div class="floating-butterflies" id="butterflies"></div>
        <audio id="loveSound" src="https://www.fesliyanstudios.com/play-mp3/387" preload="auto"></audio>
    </div>

    <script>
        const noButton = document.getElementById("noButton");
        const heartsContainer = document.getElementById("hearts");
        const butterfliesContainer = document.getElementById("butterflies");
        const loveSound = document.getElementById("loveSound");

        // Prevents the 'No' button from staying in one place
        noButton.addEventListener("mouseover", moveButton);

        function moveButton() {
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);
            noButton.style.left = `${x}px`;
            noButton.style.top = `${y}px`;
        }

        // Handles responses
        function handleResponse(response) {
            switch (response) {
                case 'yes':
                    handleYes();
                    break;
                case 'maybe':
                    handleMaybe();
                    break;
                default:
                    break;
            }
        }

        function handleYes() {
            alert('Yay! You made my day, Kuchu Puchu! ‚ù§Ô∏è');
            loveSound.play();
            generateFloatingElements();
        }

        function handleMaybe() {
            alert('Hmm... Think about it, Kuchu Puchu! üòò');
        }

        function generateFloatingElements() {
            for (let i = 0; i < 15; i++) {
                createHeart();
                createButterfly();
            }
        }

        function createHeart() {
            const heart = document.createElement("div");
            heart.classList.add("heart-emoji");
            heart.innerHTML = "‚ù§Ô∏è";
            heart.style.left = `${Math.random() * 100}%`;
            heart.style.animationDuration = `${2 + Math.random() * 3}s`;
            heartsContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 4000);
        }

        function createButterfly() {
            const butterfly = document.createElement("div");
            butterfly.classList.add("butterfly");
            butterfly.innerHTML = "ü¶ã";
            butterfly.style.left = `${Math.random() * 100}%`;
            butterfly.style.animationDuration = `${2 + Math.random() * 3}s`;
            butterfliesContainer.appendChild(butterfly);
            setTimeout(() => butterfly.remove(), 4000);
        }
    </script>
</body>
</html>
